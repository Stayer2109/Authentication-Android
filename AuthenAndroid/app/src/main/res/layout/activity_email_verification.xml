<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EmailVerificationActivity">

    <TextView
        android:id="@+id/textTitleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác minh email"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:padding="12dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Nhập email" />

        <Button
            android:id="@+id/btnSendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi" />
    </LinearLayout>


    <EditText
        android:id="@+id/etOtpEmail"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="48dp"
        android:hint="Nhập OTP Email" />

    <Button
        android:id="@+id/btnSubmitEmailOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận OTP" />

</LinearLayout>